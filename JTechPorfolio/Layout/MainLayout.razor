@inherits LayoutComponentBase

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Class="bg-black" Elevation="1">
        @* <img src="/jts-icon-512.png" style="width: 16px; height: 16px;"/> *@ Joel Santos Porfolio
        <MudSpacer />
        <MudIconButton Style="" Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
    </MudAppBar>
    <MudDrawer Style="background-color: #eaeded" @bind-Open="@isDrawerOpen">
        <MudDrawerHeader Class="bg-dark align-content-center">
            <MudText Class="text-white align-self-center">Navigate To</MudText>
        </MudDrawerHeader>
        <MudDrawerContainer>
            <NavMenu />
        </MudDrawerContainer>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool isDrawerOpen = false;

    void DrawerToggle()
    {
        isDrawerOpen = !isDrawerOpen;
    }
}
